# ============================================
# BACKEND CONFIGURATION (server.js)
# ============================================

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
FLUX_API_KEY=your_flux_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tryon
DB_USER=root
DB_PASSWORD=your_mysql_password_here

# Server Configuration
PORT=9901
NODE_ENV=development

# CORS Configuration (for Vercel/frontend access)
# Add your Vercel deployment URL here
# Example: ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com
ALLOWED_ORIGINS=

# ============================================
# FRONTEND CONFIGURATION (Vercel Environment Variables)
# ============================================

# Backend API URL (set this in Vercel)
# For local backend: REACT_APP_API_URL=http://localhost:3000
# For production backend: REACT_APP_API_URL=https://your-backend-url.com
REACT_APP_API_URL=http://localhost:3000
